@model IEnumerable<EarnHome.Models.Order>
@{
    ViewBag.Title = "Sifarişlər";

}

<h2>Sifarişlər</h2>
<div class="row">
    <div class="col-md-6 col-xl-3 grid-margin stretch-card">
        <div class="card card-animate">
            <div class="card-body">
                <ul class="list-group">
                    @foreach(var item in ViewBag.Category)
                    {
                       <li>
                         <a href="@Url.Action(item.Name,"orders",new {id=item.Id })">@item.Name</a>
                       </li>

                    }
                    
                </ul>
            </div>
        </div>
    </div><!-- end col -->
</div>
<div class="row orderitems">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xl-3 grid-margin stretch-card">
            <!-- Simple card -->
            <div class="card card-animate">
                <img class="card-img-top img-fluid orderimg" src="~/Public/images/media/sm-1.jpg" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">@item.Header</h4>
                    <h5 class="card-title">@item.User.Fullname</h5>
                    <p class="card-text">
                        @item.Text
                        <small class="text-muted">@item.Date</small>
                    </p>
                    <a href="#" class="btn btn-primary waves-effect waves-light">Button</a>
                </div>
            </div>
        </div><!-- end col -->

    }

</div>

